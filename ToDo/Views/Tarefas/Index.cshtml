@model List<TarefaModel>
@{
    ViewData["Title"] = "Visualizacao Tarefas";
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="display-4">Listagem de Tarefas</h1>
    <div class="d-flex gap-3">
        <a type="button" class="btn btn-success" asp-controller="Tarefas" asp-action="Criar">Criar Tarefa</a>
        <button type="button" class="btn btn-info" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">Filtrar</button>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Registro</th>
            <th scope="col">Tarefa</th>
            <th scope="col">Data Criação</th>
            <th scope="col">Criador</th>
            <th scope="col">Data Expiração</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Trf_Registro</th>
                    <td>@item.Trf_Tarefa</td>
                    <td>@item.Trf_DataCriacao</td>
                    <td>@item.Trf_NomeUsuario</td>
                    <td>@item.Trf_DataExpiracao</td>
                    <td>
                        <div class="btn-group gap-1" role="group" aria-label="Basic mixed styles example">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Apagar</button>
                            <a type="button" asp-route-id="@item.Trf_Id" asp-controller="Tarefas" asp-action="Editar" class="btn btn-warning">Editar</a>
                            <button type="button" class="btn btn-success">Finalizar</button>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Apagar Tarefa</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span>Deseja apagar esta tarefa?</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger">Apagar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Filtro Tarefas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <button type="button" class="btn btn-outline-primary">Data Expiracao</button>
            <button type="button" class="btn btn-outline-primary">Id</button>
        </div>
    </div>
</table>

<nav aria-label="Page navigation example" class="d-flex justify-content-end">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>